<form method="post" action="{{ path('app_courses_delete', {'slug': course.slug}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ course.id) }}">
    <button class="btn btn-danger btn-sm rounded"><i class="fas fa-trash"></i> Delete</button>
</form>
