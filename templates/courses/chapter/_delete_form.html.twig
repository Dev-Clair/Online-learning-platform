<form method="post" action="{{ path('app_chapter_delete', {'cid': chapter.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chapter.id) }}">
    <button class="btn btn-danger btn-sm rounded"><i class="fas fa-trash"></i> Delete</button>
</form>
