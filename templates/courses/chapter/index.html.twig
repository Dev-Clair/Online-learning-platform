{% extends 'base.html.twig' %}

{% block body %}
  <div class="container-xxl py-5 category">

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    
    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning">
            {{ message }}
        </div>
    {% endfor %}

    </div>

    <div class="container scrollable-container py-2"> 
        <h4>Chapters</h4>

        <a class="btn btn-sm btn-success rounded my-3 mb-3 float-end" href="{{ path('app_courses_chapter_new', {'id': course_id}) }}">Create new</a>
        <table class="table table-striped table-bordered mt-4 overflow-y: auto">
            <thead class="thead-dark text-center">
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Course</th>
                    <th>Instructor</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="text-center">
            {% for chapter in chapters %}
                <tr>
                    <td>{{ chapter.id }}</td>
                    <td>{{ chapter.title }}</td>
                    <td>{{ chapter.courses.title }}</td>
                    <td>{{ chapter.courses.user.firstName }} {{ chapter.courses.user.lastName }}</td>
                    <td class="btn btn-group">
                        <a class="btn btn-primary rounded btn-sm" href="{{ path('app_courses_chapter_show', {'id': chapter.id}) }}"><i class="fas fa-eye"></i> </a>
                        <a class="btn btn-secondary rounded btn-sm" href="{{ path('app_courses_chapter_edit', {'id': chapter.id}) }}"><i class="fas fa-edit"></i> </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
