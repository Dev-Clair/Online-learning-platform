{% extends 'base.html.twig' %}

{% block body %}
    <div class="container scrollable-container py-2">
        <h4>Chapter</h4>

        <a class="btn btn-info rounded btn-sm float-end mb-2" href="{{ path('app_courses_lesson_index', {'courseslug': course_slug, 'chapterslug': chapter.chapterslug}) }}">
            Chapter Lessons
        </a>

        <table class="table table-striped table-bordered py-2">
            <tbody class="thead-dark text-center">
            <tr>
                <th>Id</th>
                <td>{{ chapter.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ chapter.title }}</td>
            </tr>
            <tr>
                <th>Course</th>
                <td>{{ chapter.courses.title }}</td>
            </tr>
            <tr>
                <th>Instructor</th>
                <td>{{ chapter.courses.instructor.firstName }} {{ chapter.courses.instructor.lastName }}</td>
            </tr>
            </tbody>
        </table>

        <div class="mb-2 btn-group float-end">
            <a class="btn btn-secondary rounded btn-sm" href="{{ path('app_courses_chapter_index', {'courseslug': course_slug}) }}"> <<< </a>

            {{ include('courses/chapter/_delete_form.html.twig') }}
         </div>
    </div>
{% endblock %}
