{% extends 'base.html.twig' %}

{% block body %}

  <!-- Categories Start -->
  <div class="container-xxl py-5 category">

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    
    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning">
            {{ message }}
        </div>
    {% endfor %}

    <div class="container">
      <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
        <h6 class="section-title bg-white text-center text-primary px-3">
          Categories
        </h6>
        <h1 class="mb-5">Courses Categories</h1>
      </div>
      <div class="row g-3">
        <div class="col-lg-7 col-md-6">
          <div class="row g-3">
            <div class="col-lg-12 col-md-12 wow zoomIn" data-wow-delay="0.1s">
              <a class="position-relative d-block overflow-hidden" href="">
                <img class="img-fluid" src="{{ asset('build/images/cat-1.c251f2cc.jpg') }}" alt="" />
                <div
                  class="bg-white text-center position-absolute bottom-0 end-0 py-2 px-3"
                  style="margin: 1px"
                >
                  <h5 class="m-0">Software Engineering</h5>
                  <small class="text-primary"><strong>15 Courses</strong></small>
                </div>
              </a>
            </div>
            <div class="col-lg-6 col-md-12 wow zoomIn" data-wow-delay="0.3s">
              <a class="position-relative d-block overflow-hidden" href="">
                <img class="img-fluid" src="{{ asset('build/images/cat-2.f7ebf377.jpg') }}" alt="" />
                <div
                  class="bg-white text-center position-absolute bottom-0 end-0 py-2 px-3"
                  style="margin: 1px"
                >
                  <h5 class="m-0">Cloud Engineering</h5>
                  <small class="text-primary"><strong>12 Courses</strong></small>
                </div>
              </a>
            </div>
            <div class="col-lg-6 col-md-12 wow zoomIn" data-wow-delay="0.5s">
              <a class="position-relative d-block overflow-hidden" href="">
                <img class="img-fluid" src="{{ asset('build/images/cat-3.a54e04e9.jpg') }}" alt="" />
                <div
                  class="bg-white text-center position-absolute bottom-0 end-0 py-2 px-3"
                  style="margin: 1px"
                >
                  <h5 class="m-0">Product Management</h5>
                  <small class="text-primary"><strong>8 Courses</strong></small>
                </div>
              </a>
            </div>
          </div>
        </div>
        <div
          class="col-lg-5 col-md-6 wow zoomIn"
          data-wow-delay="0.7s"
          style="min-height: 350px"
        >
          <a class="position-relative d-block h-100 overflow-hidden" href="">
            <img
              class="img-fluid position-absolute w-100 h-100"
              src="{{ asset('build/images/cat-4.7e07c574.jpg') }}"
              alt=""
              style="object-fit: cover"
            />
            <div
              class="bg-white text-center position-absolute bottom-0 end-0 py-2 px-3"
              style="margin: 1px"
            >
              <h5 class="m-0">Blockchain and Smart Contracts</h5>
              <small class="text-primary"><strong>5 Courses</strong></small>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
  <!-- Categories Start -->
  
  <!-- Courses Start -->
  <div class="container-xxl py-5">
    <div class="container">
      <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
        <h6 class="section-title bg-white text-center text-primary px-3">
          Courses
        </h6>
        <h1 class="mb-5">Popular Courses</h1>
      </div>
      <div class="row g-4 justify-content-left">
        {% for course in courses %}
          <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
            <div class="course-item bg-light">
              <div class="position-relative overflow-hidden">
                <img class="img-fluid" src="{{ asset('build/images/course-1.d8bd3ee1.jpg') }}" alt="" />
                <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">

                  {% if app.user is null %}
                    <a href="{{ path('app_courses_show', {'id': course.id}) }}" class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px">Read More</a>

                    <a href="{{ path('app_reviews_index') }}" class="flex-shrink-0 btn btn-sm btn-secondary px-3 border-end" style="border-radius: 0 0px 0px 0">See Reviews</a>

                    <a href="{{ path('app_courses_enroll', {'id': course.id}) }}" class="flex-shrink-0 btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0">Enroll Now</a>
                  {% endif %}

                  {% if app.user and 'ROLE_STUDENT' in app.user.roles %}
                    <a href="{{ path('app_courses_show', {'id': course.id}) }}" class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px">Read More</a>

                    <a href="{{ path('app_reviews_index') }}" class="flex-shrink-0 btn btn-sm btn-secondary px-3 border-end" style="border-radius: 0 0px 0px 0">See Reviews</a>
                    {% if course.isUserEnrolled(app.user) %}
                      <a href="{{ path('app_courses_learning_lesson', {'id': course.id}) }}" class="flex-shrink-0 btn btn-sm btn-success px-3" style="border-radius: 0 30px 30px 0">Continue Learning</a>
                    {% else %}
                      <a href="{{ path('app_courses_enroll', {'id': course.id}) }}" class="flex-shrink-0 btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0">Enroll Now</a>
                    {% endif %}
                  {% endif %}

                  {% if app.user and 'ROLE_INSTRUCTOR' in app.user.roles %}
                    <a href="{{ path('app_courses_show', {'id': course.id}) }}" class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px">Read More</a>
                    <div class="dropdown">
                      <a href="#" class="btn btn-sm btn-primary border-end dropdown-toggle" data-bs-toggle="dropdown">
                        See <i class="fa-light fa-colon"></i>
                      </a>
                      <div class="dropdown-menu fade-down">
                        <a href="{{ path('app_courses_chapter_index', {'id': course.id}) }}" class="btn btn- outline dropdown-item">Chapters</a>

                        <a href="{{ path('app_courses_enrolled', {'id': course.id}) }}" class="btn btn- outline dropdown-item">Enrolled</a>
                      </div>
                    </div>
                    <a href="{{ path('app_courses_edit', {'id': course.id}) }}" class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 0 30px 30px 0">Edit Course</a>
                  {% endif %}

                </div>
              </div>
              <div class="text-center p-4 pb-0">
                <h3 class="mb-4">${{ course.value }}</h3>
                <h5 class="mb-4">{{ course.title }}</h5>
              </div>
              <div class="d-flex border-top">
                <small class="flex-fill text-center border-end py-2"
                  ><i class="fa fa-user-tie text-primary me-2"></i>{{ course.user.firstName }} {{ course.user.lastName }}</small
                >
                <small class="flex-fill text-center border-end py-2"
                  ><i class="fa fa-clock text-primary me-2"></i>{{ course.duration }} Hrs</small
                >
                <small class="flex-fill text-center py-2"
                  ><i class="fa fa-user text-primary me-2"></i>{{ course.enrollments.count }}
                  Students</small
                >
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
  <!-- Courses End -->
{% endblock %}
