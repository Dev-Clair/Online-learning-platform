{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-xxl py-5 category">

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        
        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning">
                {{ message }}
            </div>
        {% endfor %}
    </div>

    <div class="container scrollable-container py-2"> 
        <h4>Lessons</h4>

        <a class="btn btn-sm btn-success rounded my-3 mb-3 float-end" href="{{ path('app_courses_lesson_new', {'courseslug': course_slug, 'chapterslug': chapter_slug}) }}">
            Create new
        </a>
        
        <table class="table table-striped table-bordered mt-4 overflow-y: auto">
            <thead class="thead-dark text-center">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Duration</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody class="text-center">
            {% for lesson in lessons %}
                <tr>
                    <td>{{ lesson.id }}</td>
                    <td>{{ lesson.title }}</td>
                    <td>{{ lesson.duration|date('H:i:s') }}</td>
                    <td class="btn btn-group">
                        <a class="btn btn-primary rounded btn-sm" href="{{ path('app_courses_lesson_show', {'courseslug': course_slug, 'chapterslug': chapter_slug, 'id': lesson.id}) }}"><i class="fas fa-eye"></i> </a>
                        <a class="btn btn-secondary rounded btn-sm" href="{{ path('app_courses_lesson_edit', {'courseslug': course_slug, 'chapterslug': chapter_slug, 'id': lesson.id}) }}"><i class="fas fa-edit"></i> </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
