{% extends 'base.html.twig' %}

{% block body %}
    <div class="container scrollable-container py-2">
        <h4>Lessons</h4>

        <table class="table table-striped table-bordered mt-4">
            <tbody class="thead-dark text-center">
                <tr>
                    <th>Id</th>
                    <td>{{ lesson.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ lesson.title }}</td>
                </tr>
                <tr>
                    <th>Chapter</th>
                    <td>{{ lesson.chapter.title }}</td>
                </tr>
                <tr>
                    <th>Duration</th>
                    <td>{{ lesson.duration|date('H:i:s') }}</td>
                </tr>
                {% if app.user is not null and 'ROLE_INSTRUCTOR' in app.user.roles %}
                    <tr>
                        <th>Created</th>
                        <td>{{ lesson.createdAt ? lesson.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Updated</th>
                        <td>{{ lesson.updatedAt ? lesson.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
        
        {% if app.user is not null and 'ROLE_INSTRUCTOR' in app.user.roles %}
            <div class="mb-2 btn-group float-end">
                <a class="btn btn-secondary rounded btn-sm" href="{{ path('app_courses_lesson_index', {'courseslug': course_slug, 'chapterslug': chapter_slug}) }}"> <<< </a>

                <a class="btn btn-info rounded btn-sm" href="{{ path('app_courses_lesson_edit', {'courseslug': course_slug, 'chapterslug': chapter_slug, 'id': lesson.id}) }}"><i class="fas fa-edit"></i>
                </a>

                {{ include('courses/lesson/_delete_form.html.twig') }}
            </div>
        {% endif %}
    </div>
{% endblock %}
