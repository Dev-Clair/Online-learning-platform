{% extends 'base.html.twig' %}

{% block title %}Courses{% endblock %}

{% block body %}
    <div class="container scrollable-container py-2"> 
        <h4>Products</h4>

        <a class="btn btn-sm btn-success rounded my-3 mb-3 float-end" href="{{ path('app_courses_new') }}">Create new</a>

        <table class="table table-striped table-bordered mt-4">
                <thead class="thead-dark text-center">
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Duration</th>
                    <th>Enrolled</th>
                    <th>Instructor</th>
                    <th>Created</th>
                    <th>Updated</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="text-center">
            {% for course in courses %}
                <tr>
                    <td>{{ course.id }}</td>
                    <td>{{ course.title }}</td>
                    <td>{{ course.description }}</td>
                    <td>{{ course.duration }}</td>
                    <td>{{ course.enrollments.count }}</td>
                    <td>{{ course.user.firstName }} {{ course.user.lastName }}</td>
                    <td>{{ course.createdAt ? course.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ course.updatedAt ? course.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td class="btn btn-group">
                        <a class="btn btn-primary rounded btn-sm" href="{{ path('app_courses_show', {'id': course.id}) }}"><i class="fas fa-eye"></i> </a>
                        <a class="btn btn-secondary rounded btn-sm" href="{{ path('app_courses_edit', {'id': course.id}) }}"><i class="fas fa-edit"></i> </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
