<form method="post" action="{{ path('app_courses_reviews_delete', {'slug': review.course.slug, 'rid': review.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
    <button class="btn btn-danger btn-sm rounded"><i class="fas fa-trash"></i></button>
</form>
