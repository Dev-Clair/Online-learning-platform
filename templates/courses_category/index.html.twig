{% extends 'base.html.twig' %}

{% block body %}

    <div class="container scrollable-container py-2"> 
        <h4>Courses Category</h4>

        <a class="btn btn-sm btn-success rounded my-3 mb-3 float-end" href="{{ path('app_courses_category_new') }}">
            Create new
        </a>
        
        <table class="table table-striped table-bordered mt-4 overflow-y: auto">
            <thead class="thead-dark text-center">
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="text-center">
            {% for courses_category in courses_categories %}
                <tr>
                    <td>{{ courses_category.id }}</td>
                    <td>{{ courses_category.title }}</td>
                    <td class="btn btn-group">
                        <a class="btn btn-primary rounded btn-sm" href="{{ path('app_courses_category_edit', {'id': courses_category.id}) }}">
                            <i class="fas fa-edit"></i>
                        </a>
                         
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
{% endblock %}
