{% extends 'base.html.twig' %}

{% block title %} {{ Login }} {% endblock %}

{% block body %}

    <section class="vh-100 bg-primary bg-gradient">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-light text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <div class="mb-4">
                                {% if error %}
                                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                                <h2 class="fw-bold mb-5 text-uppercase text-primary d-flex justify-content-center align-items-center">
                                    Login
                                </h2>
                                <form method="post" action="{{ path('app_login') }}">
                                    {# {{ csrf_token('authenticate') }} #}
                                <div class="form-outline form-white text-primary mb-4">
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                </div>
                                <div class="form-outline form-white text-primary mb-4">
                                    <label for="username" class="form-label">Email:</label>
                                    <input type="text" id="username" name="_username" class="form-control form-control-lg" value="{{ last_username }}" required autofocus>
                                </div>
                                <div class="form-outline form-white text-primary mb-1">
                                    <label for="password" class="form-label">Password:</label>
                                    <input type="password" id="password" name="_password" class="form-control form-control-lg"  required>
                                </div>
                                <div>
                                    <button class="btn btn-primary bg-gradient text-white btn-lg px-5"  type="submit">Sign in</button>
                                </form>
                                </div>
                                <div>
                                    <p class="mb-0 text-dark">Don't have an account?
                                        <a href="/register" class="text-primary fw-bold">Sign Up</a>
                                    </p>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
