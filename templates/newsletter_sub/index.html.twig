{% extends 'base.html.twig' %}

{% block title %}Newsletter{% endblock %}

{% block body %}
    <div class="container scrollable-container py-5"> 
        <h4>Newsletter Subscriptions</h4>

        <a href="{{ path('app_newsleter_sub_new') }}">Create new</a>

        <table class="table table-striped table-bordered mt-4">
            <thead class="thead-dark text-center">
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="text-center">
            {% for newsletter_sub in newsletter_subs %}
                <tr>
                    <td>{{ newsletter_sub.id }}</td>
                    <td>{{ newsletter_sub.email }}</td>
                    <td>
                        <a href="{{ path('app_newsletter_sub_delete', {'id': newsletter_sub.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
