{% extends 'base.html.twig' %}

{% block title %}&#128100; Profile{% endblock %}

{% block body %}
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-light text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <div class="mb-4">
                              <h4 class="fw-bold mb-5 text-uppercase text-primary d-flex justify-content-center align-items-center">Update User {{ profile.id }}  Profile</h4>

                              {{ form_start(form, {'attr': {'id': 'form-edit-profile'}}) }}

                              {% if form_errors(form) %}
                                  <div class="alert alert-danger">
                                      {{ form_errors(form) }}
                                  </div>
                              {% endif %}

                              <div class="mb-4 text-primary">
                                  {{ form_row(form.dateOfBirth, {'attr': {'disabled': false}}) }}
                              </div>

                              <div class="mb-4 text-primary">
                                  {{ form_row(form.address, {'attr': {'class':'form-control', 'placeholder': 'Enter your address here', 'style':'height:150px', 'disabled':false}}) }}
                              </div>

                              <div class="mb-4 text-primary">
                                  {{ form_row(form.country, {'attr': {'disabled':false}}) }}
                              </div>

                              <div class="mb-4 text-primary">
                                  {{ form_row(form.user, {'attr': {'disabled':true}}) }}
                              </div>

                              <div class="mb-2">
                                  <a class="btn btn-secondary btn-sm px-5" href="{{ path('app_profile_admin_index') }}"> <<< </a>
                                  
                                  <button class="btn btn-success btn-sm px-5" type="submit">Update</button>
                              </div>

                              {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
