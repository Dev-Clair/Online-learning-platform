{% extends 'base.html.twig' %}

{% block title %}Profiles{% endblock %}

{% block body %}
    <div class="container scrollable-container py-5"> 
        <h4>Manage User Profiles</h4>
        
        {% if 'ROLE_SUPER_ADMIN' in app.user.roles %}
            <a class="btn btn-success btn-sm rounded my-3 mb-3 float-end" href="{{ path('app_profile_new') }}">Create new</a>
        {% endif %}

        <table class="table table-striped table-bordered mt-4">
            <thead class="thead-dark text-center">
                <tr>
                    <th>Id</th>
                    <th>DateOfBirth</th>
                    <th>Address</th>
                    <th>Country</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody class="text-center">
            {% for profile in profiles %}
                <tr>
                    <td>{{ profile.id }}</td>
                    <td>{{ profile.dateOfBirth ? profile.dateOfBirth|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ profile.address }}</td>
                    <td>{{ profile.country }}</td>
                    <td>
                        <a class="btn btn-primary rounded btn-sm" href="{{ path('app_profile_show', {'id': profile.id}) }}">
                            <i class="fas fa-eye"></i></a>
                        <a class="btn btn-secondary rounded btn-sm" href="{{ path('app_profile_edit', {'id': profile.id}) }}">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
