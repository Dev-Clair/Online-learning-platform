{% extends 'base.html.twig' %}

{% block body %}
    <div class="container py-5"> 
        <h4>Profile</h4>

        <table class="table table-striped table-bordered mt-4">
            <tbody class="thead-dark text-center">
                <tr>
                    <th>Id</th>
                    <td>{{ profile.id }}</td>
                </tr>
                <tr>
                    <th>DateOfBirth</th>
                    <td>{{ profile.dateOfBirth ? profile.dateOfBirth|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Country</th>
                    <td>{{ profile.country }}</td>
                </tr>
            </tbody>
        </table>
        
        <div class="mb-2 btn-group float-end">
            <a class="btn btn-secondary rounded btn-sm" href="{{ path('app_courses_index') }}">
                <<<
            </a>
  
            <a class="btn btn-info rounded btn-sm" href="{{ path('app_profile_edit', {'id': profile.id}) }}">
                <i class="fas fa-edit"> Update</i>
            </a>
        </div>
    </div>
{% endblock %}
