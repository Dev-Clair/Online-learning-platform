{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <div class="container scrollable-container py-2"> 
        <h4>Manage User Accounts</h4>
        
        {% if 'ROLE_SUPER_ADMIN' in app.user.roles %}
            <a class="btn btn-sm btn-success rounded my-3 mb-3 float-end" href="{{ path('app_admin_user_new') }}">Create Account</a>
        {% endif %}

        <table class="table table-striped table-bordered mt-4">
            <thead class="thead-dark text-center">
                <tr>
                    <th>Id</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Password</th>
                    <th>Created</th>
                    <th>Updated</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="text-center">
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.password }}</td>
                    <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td class="btn btn-group">
                        <a class="btn btn-primary rounded btn-sm" href="{{ path('app_admin_user_show', {'id': user.id}) }}">
                            <i class="fas fa-eye"></i> 
                        </a>
                        
                        <a class="btn btn-secondary rounded btn-sm" href="{{ path('app_admin_user_edit', {'id': user.id}) }}">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
