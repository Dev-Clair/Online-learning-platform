{% extends 'base.html.twig' %}

{% block body %}
    <div class="container scrollable-container py-2"> 
        <h4>&#128100; Account</h4>

        <table class="table table-striped table-bordered mt-4 py-2">
            <tbody class="thead-dark text-center">
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>View Profile</th>
                    <td>
                        <a href="{{ path('app_profile_show', {'id': user.profile.id}) }}" class="btn btn-primary btn-sm rounded">
                            {{ user.profile.id }}
                        </a>
                    </td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>UpdatedAt</th>
                    <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
        
        <div class="mb-2 btn-group float-end">
            <a class="btn btn-secondary rounded btn-sm" href="{{ path('app_admin_index') }}"> <<< </a>
            
            <a class="btn btn-info rounded btn-sm" href="{{ path('app_admin_edit', {'userslug': user.userslug}) }}">  <i class="fas fa-edit"></i>
            </a>
            
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
